<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<profile-config>
	<vars>
		<var name="theme">default</var>
		<var name="language">english</var>
	</vars>
	<!-- The HTML templates used for DOM manipulation. Change only if you know what you're doing. -->
	<templates>
		<profile>
		<![CDATA[
            <div class="sp-bg-game">
            <div class="sp-bg-game-img" style="padding:10px;border-radius:5%;text-align: center;">
                <div class="sp-bg-fade">
                    <div class="sp-badge">
                        <div class="sp-avatar">
                            <img src="" width="50" height="50" alt="" style="display: block;border-radius:50%;margin: auto;" />
                        </div>
                        <div class="sp-info">
                            <span class="sp-gamertag"></span><br />
                        </div>
                        <div class="sp-extra">
                            <div class="sp-handle"></div>
                            <div class="sp-content">

                            	<span class="sp-activity"></span><br />
                            	<img src="styles/openxbl/gamerscore.png" style="width:15px;position: absolute; margin-left: -18px; margin-top: 2px;" alt="gamerscore" /> <span class="sp-gamerscore"></span>
                            	<span class="sp-multiplayer"></span>

                            </div>
                        </div>
                    </div>
                </div>
			</div>
            </div>
		]]>
		</profile>
		<loading>
		<![CDATA[
			<div class="sp-loading">
			</div>
		]]>
		</loading>
		<error>
		<![CDATA[
			<div class="sp-error">
			</div>
		]]>
		</error>
	</templates>
</profile-config>